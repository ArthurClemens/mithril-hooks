{
  "name": "mithril-hooks",
  "version": "0.3.0",
  "description": "Hooks for Mithril",
  "main": "dist/mithril-hooks",
  "module": "dist/mithril-hooks.mjs",
  "scripts": {
    "lint": "eslint ./src",
    "build": "npm run clean && npm run rollup",
    "rollup": "../../node_modules/rollup/bin/rollup -c ../../scripts/rollup.umd.js && ../../node_modules/rollup/bin/rollup -c ../../scripts/rollup.es.js",
    "clean": "rimraf dist/*",
    "size": "gzip -c dist/mithril-hooks.js | wc -c"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Arthur Clemens <arthurclemens@gmail.com> (http://visiblearea.com)",
  "homepage": "https://github.com/ArthurClemens/mithril-hooks",
  "license": "MIT",
  "devDependencies": {
    "mithril": "2.0.0-rc.4",
    "rimraf": "^2.6.3"
  },
  "peerDependencies": {
    "mithril": "2.0.0-rc.4"
  }
}
